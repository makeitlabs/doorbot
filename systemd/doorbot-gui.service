[Unit]
Description=Doorbot GUI
After=getty.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/doorbot/gui
ExecStartPre=/bin/sleep 5
ExecStartPre=/usr/bin/fbset -fb /dev/fb0 -xres 800 -yres 600
ExecStart=/usr/bin/python3 guiclient.py -platform linuxfb
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target

